<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity123.ActivityOne">

    <Button
        android:id="@+id/activity_two_button"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_background"
        android:text="ACTIVITY 2"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/activity_three_button"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/activity_two_button"
        android:layout_marginEnd="43dp"
        android:background="@drawable/btn_background"
        android:text="ACTIVITY 3"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/showButton1"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_two_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_background"
        android:clickable="true"
        android:text="CLICK ME"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    //LAUNCH BUTTONS

    <Button
        android:id="@+id/button_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="36dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/maps_icon"
        android:text="MAPS"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button_maps"
        android:layout_marginEnd="36dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/email_icon"
        android:text="GMAIL"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_sms"
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_maps"
        android:layout_marginTop="146dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/sms_icon"
        android:text="@string/send_sms_intent"
        android:textSize="16sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button_browser"
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:layout_alignEnd="@+id/button_email"
        android:layout_alignTop="@+id/button_sms"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/browser_icon"
        android:text="Browser"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>